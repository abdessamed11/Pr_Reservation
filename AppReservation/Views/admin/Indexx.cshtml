@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@*@{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@
@{
    ViewBag.Title = "All Roles";
}

<h1>Index</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="admin">Add new role</a>

    

    foreach (var role in Model)
        {
            <div class="card">
                <div class="card-title">
                    <h5 class="card-title p-2 pt-3">@role.Name</h5>
                    <a asp-action="EditRole" asp-controller="admin" asp-route-id="@role.Id" class="btn btn-primary m-2">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>   
                </div>
            </div>

        }


}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Admin" asp-action="CreateRole">
                Create Role
            </a>
        </div>

    </div>
}

